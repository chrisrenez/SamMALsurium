@model SamMALsurium.Models.ViewModels.Admin.PendingApprovalsViewModel
@{
    ViewData["Title"] = "Wartende Genehmigungen";
}

<div class="admin-page-header">
    <h1>Wartende Genehmigungen</h1>
    <p class="lead">Benutzer, die auf Genehmigung warten</p>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        Keine wartenden Genehmigungen vorhanden.
    </div>
}
else
{
    <div class="card-base card-padding">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>E-Mail</th>
                        <th>Registrierungsdatum</th>
                        <th class="text-end">Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.PendingUsers)
                    {
                        <tr>
                            <td>
                                <strong>@user.FirstName @user.LastName</strong>
                            </td>
                            <td>@user.Email</td>
                            <td>@user.RegistrationDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <form asp-action="Approve" method="post" class="d-inline">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-circle me-1"></i>Genehmigen
                                        </button>
                                    </form>
                                    <button type="button"
                                            class="btn btn-danger btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#rejectModal"
                                            data-user-id="@user.UserId"
                                            data-user-name="@user.FirstName @user.LastName"
                                            data-user-email="@user.Email">
                                        <i class="bi bi-x-circle me-1"></i>Ablehnen
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted mb-0">
                <i class="bi bi-info-circle me-2"></i>
                Insgesamt <strong>@Model.Count</strong> Benutzer warten auf Genehmigung.
            </p>
        </div>
    </div>
}

<!-- Reject Confirmation Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Reject" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">Benutzer ablehnen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="userId" id="rejectUserId" />

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Achtung:</strong> Diese Aktion kann nicht rückgängig gemacht werden.
                    </div>

                    <p>
                        Möchten Sie den Benutzer <strong id="rejectUserName"></strong>
                        (<span id="rejectUserEmail"></span>) wirklich ablehnen?
                    </p>

                    <div class="mb-3">
                        <label for="rejectionMessage" class="form-label">
                            Optionale Nachricht an den Benutzer:
                        </label>
                        <textarea class="form-control"
                                  name="rejectionMessage"
                                  id="rejectionMessage"
                                  rows="4"
                                  placeholder="Diese Nachricht wird per E-Mail an den Benutzer gesendet (optional)."></textarea>
                        <div class="form-text">
                            Wenn Sie keine Nachricht eingeben, wird der Benutzer ohne Benachrichtigung gelöscht.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle me-1"></i>Ablehnen und löschen
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle reject modal data population
        document.addEventListener('DOMContentLoaded', function() {
            const rejectModal = document.getElementById('rejectModal');
            if (rejectModal) {
                rejectModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const userId = button.getAttribute('data-user-id');
                    const userName = button.getAttribute('data-user-name');
                    const userEmail = button.getAttribute('data-user-email');

                    document.getElementById('rejectUserId').value = userId;
                    document.getElementById('rejectUserName').textContent = userName;
                    document.getElementById('rejectUserEmail').textContent = userEmail;
                    document.getElementById('rejectionMessage').value = '';
                });
            }
        });
    </script>
}
