@model dynamic
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .content {
            margin-bottom: 20px;
        }
        .message-box {
            background-color: #fff3cd;
            border-left: 4px solid #ffc107;
            padding: 15px;
            margin: 20px 0;
        }
        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
            font-size: 0.9em;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="header">
        <h2>SamMALsurium - Mitgliederanfrage</h2>
    </div>

    <div class="content">
        <p>Hallo @Model.UserFirstName,</p>

        <p>vielen Dank für dein Interesse an SamMALsurium.</p>

        @if (!string.IsNullOrWhiteSpace(Model.RejectionMessage))
        {
            <div class="message-box">
                <p><strong>Nachricht:</strong></p>
                <p>@Model.RejectionMessage</p>
            </div>
        }
        else
        {
            <p>Leider können wir deine Mitgliederanfrage zum jetzigen Zeitpunkt nicht berücksichtigen.</p>
        }

        <p>Wir wünschen dir alles Gute für deine künstlerische Arbeit.</p>
    </div>

    <div class="footer">
        <p>Mit freundlichen Grüßen,<br>Das SamMALsurium Team</p>
    </div>
</body>
</html>
