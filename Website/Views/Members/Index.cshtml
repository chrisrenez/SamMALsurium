@model MemberListViewModel
@{
    ViewData["Title"] = "Mitgliederverwaltung";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Mitgliederverwaltung</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Mitglied hinzufügen
        </a>
    </div>

    <!-- Search and Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="searchQuery" class="form-label">Suche</label>
                        <input type="text"
                               class="form-control"
                               id="searchQuery"
                               name="searchQuery"
                               value="@Model.SearchQuery"
                               placeholder="Name oder E-Mail...">
                    </div>
                    <div class="col-md-3">
                        <label for="statusFilter" class="form-label">Status</label>
                        <select class="form-select" id="statusFilter" name="statusFilter">
                            <option value="">Alle</option>
                            <option value="Active" selected="@(Model.StatusFilter == "Active")">Aktiv</option>
                            <option value="Suspended" selected="@(Model.StatusFilter == "Suspended")">Gesperrt</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="roleFilter" class="form-label">Rolle</label>
                        <select class="form-select" id="roleFilter" name="roleFilter">
                            <option value="">Alle</option>
                            <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admin</option>
                            <option value="Member" selected="@(Model.RoleFilter == "Member")">Mitglied</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Suchen
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.SearchQuery) || !string.IsNullOrWhiteSpace(Model.StatusFilter) || !string.IsNullOrWhiteSpace(Model.RoleFilter))
                {
                    <div class="mt-3">
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Filter zurücksetzen
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-body">
            <p class="text-muted mb-3">@Model.TotalCount Mitglied(er) gefunden</p>

            @if (Model.Members.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Status</th>
                                <th>Rolle</th>
                                <th class="text-end">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model.Members)
                            {
                                <tr>
                                    <td>
                                        @member.FullName
                                        @if (member.IsAdmin)
                                        {
                                            <span class="badge bg-danger ms-1">Admin</span>
                                        }
                                    </td>
                                    <td>@member.Email</td>
                                    <td>
                                        @if (member.AccountStatus == AccountStatus.Active)
                                        {
                                            <span class="badge bg-success">Aktiv</span>
                                        }
                                        else if (member.AccountStatus == AccountStatus.Suspended)
                                        {
                                            <span class="badge bg-warning text-dark">Gesperrt</span>
                                        }
                                    </td>
                                    <td>@member.Role</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit"
                                               asp-route-id="@member.UserId"
                                               class="btn btn-sm btn-outline-primary"
                                               title="Bearbeiten">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            @if (member.AccountStatus == AccountStatus.Active)
                                            {
                                                <form asp-action="Suspend"
                                                      asp-route-userId="@member.UserId"
                                                      method="post"
                                                      class="d-inline"
                                                      onsubmit="return confirm('Möchten Sie dieses Mitglied wirklich sperren?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="btn btn-sm btn-outline-warning"
                                                            title="Sperren">
                                                        <i class="bi bi-lock"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (member.AccountStatus == AccountStatus.Suspended)
                                            {
                                                <form asp-action="Reactivate"
                                                      asp-route-userId="@member.UserId"
                                                      method="post"
                                                      class="d-inline"
                                                      onsubmit="return confirm('Möchten Sie dieses Mitglied reaktivieren?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="btn btn-sm btn-outline-success"
                                                            title="Reaktivieren">
                                                        <i class="bi bi-unlock"></i>
                                                    </button>
                                                </form>
                                            }

                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal"
                                                    data-user-id="@member.UserId"
                                                    data-user-name="@member.FullName"
                                                    data-user-email="@member.Email"
                                                    title="Löschen">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Keine Mitglieder gefunden.
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Mitglied löschen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
            </div>
            <form id="deleteForm" method="post" asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" id="deleteUserId" />
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warnung:</strong> Diese Aktion kann nicht rückgängig gemacht werden!
                    </div>
                    <p>Möchten Sie das folgende Mitglied wirklich permanent löschen?</p>
                    <div class="card bg-light">
                        <div class="card-body">
                            <p class="mb-1"><strong>Name:</strong> <span id="deleteUserName"></span></p>
                            <p class="mb-0"><strong>E-Mail:</strong> <span id="deleteUserEmail"></span></p>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted">
                        <small>
                            <i class="bi bi-info-circle"></i>
                            Alle Daten und Inhalte dieses Benutzers werden permanent gelöscht.
                        </small>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Permanent löschen
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Populate delete modal with user data
        document.getElementById('deleteModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var userId = button.getAttribute('data-user-id');
            var userName = button.getAttribute('data-user-name');
            var userEmail = button.getAttribute('data-user-email');

            document.getElementById('deleteUserId').value = userId;
            document.getElementById('deleteUserName').textContent = userName;
            document.getElementById('deleteUserEmail').textContent = userEmail;
        });
    </script>
}
