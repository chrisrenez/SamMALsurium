@model FilterOptions

<div class="card mb-4">
    <div class="card-body">
        <form method="get" action="@Url.Action("Index")" id="filterForm">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="searchTerm" class="form-label">Suche</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                           value="@Model.SearchTerm" placeholder="Titel suchen...">
                </div>
                <div class="col-md-2">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Alle</option>
                        @if (Model.Status == PollStatus.Active)
                        {
                            <option value="@PollStatus.Active" selected>Aktiv</option>
                        }
                        else
                        {
                            <option value="@PollStatus.Active">Aktiv</option>
                        }
                        @if (Model.Status == PollStatus.Closed)
                        {
                            <option value="@PollStatus.Closed" selected>Geschlossen</option>
                        }
                        else
                        {
                            <option value="@PollStatus.Closed">Geschlossen</option>
                        }
                        @if (Model.Status == PollStatus.Archived)
                        {
                            <option value="@PollStatus.Archived" selected>Archiviert</option>
                        }
                        else
                        {
                            <option value="@PollStatus.Archived">Archiviert</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="type" class="form-label">Typ</label>
                    <select class="form-select" id="type" name="type">
                        <option value="">Alle</option>
                        @if (Model.Type == PollType.MultipleChoice)
                        {
                            <option value="@PollType.MultipleChoice" selected>Multiple Choice</option>
                        }
                        else
                        {
                            <option value="@PollType.MultipleChoice">Multiple Choice</option>
                        }
                        @if (Model.Type == PollType.RankedChoice)
                        {
                            <option value="@PollType.RankedChoice" selected>Rangfolge</option>
                        }
                        else
                        {
                            <option value="@PollType.RankedChoice">Rangfolge</option>
                        }
                        @if (Model.Type == PollType.ScoreVoting)
                        {
                            <option value="@PollType.ScoreVoting" selected>Bewertung</option>
                        }
                        else
                        {
                            <option value="@PollType.ScoreVoting">Bewertung</option>
                        }
                        @if (Model.Type == PollType.AvailabilityGrid)
                        {
                            <option value="@PollType.AvailabilityGrid" selected>Verf체gbarkeit</option>
                        }
                        else
                        {
                            <option value="@PollType.AvailabilityGrid">Verf체gbarkeit</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="pageSize" class="form-label">Eintr채ge</label>
                    <select class="form-select" id="pageSize" name="pageSize">
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-1"></i>Filtern
                    </button>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.Status.HasValue || Model.Type.HasValue)
            {
                <div class="mt-3">
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Filter zur체cksetzen
                    </a>
                </div>
            }
        </form>
    </div>
</div>
