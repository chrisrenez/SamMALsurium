@model NotificationPreferencesViewModel
@{
    ViewData["Title"] = "Benachrichtigungseinstellungen";
}

<div class="container-xxl py-3">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="content-card card-base card-padding">
                <h2 class="mb-4">@ViewData["Title"]</h2>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div>
                    <form asp-action="NotificationPreferences" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <h5 class="card-title mb-3">Umfrage-Benachrichtigungen</h5>
                            <p class="text-muted small mb-3">
                                Steuere, welche Benachrichtigungen du per E-Mail erhalten möchtest.
                            </p>

                            <div class="form-check form-switch mb-3">
                                <input asp-for="EnablePollNotifications"
                                       class="form-check-input"
                                       type="checkbox"
                                       role="switch"
                                       id="enablePollNotifications">
                                <label asp-for="EnablePollNotifications"
                                       class="form-check-label"
                                       for="enablePollNotifications">
                                    Benachrichtigungen zu Umfragen erhalten
                                </label>
                            </div>

                            <div class="small text-muted ms-4">
                                <p class="mb-2">Wenn aktiviert, erhältst du E-Mails über:</p>
                                <ul class="mb-0">
                                    <li>Neue Umfragen</li>
                                    <li>Umfragen, die bald enden</li>
                                    <li>Verfügbare Umfrageergebnisse</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Profile" class="btn btn-secondary">
                                Zurück zum Profil
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Einstellungen speichern
                            </button>
                        </div>
                    </form>
                </div>

                <div class="mt-3">
                    <p class="text-muted small">
                        <strong>Hinweis:</strong> Diese Einstellungen gelten nur für E-Mail-Benachrichtigungen.
                        Du kannst Umfragen jederzeit auf der Website einsehen.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
