@model CreatePollViewModel
@{
    ViewData["Title"] = "Neue Umfrage erstellen";
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Index">Admin</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Umfragen</a></li>
        <li class="breadcrumb-item active" aria-current="page">Neue Umfrage</li>
    </ol>
</nav>

<h1 class="mb-4">Neue Umfrage erstellen</h1>

<form asp-action="Create" method="post" id="pollForm">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <!-- Basic Information -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Grundinformationen</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Titel <span class="text-danger">*</span></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Beschreibung</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Type" class="form-label">Umfragetyp <span class="text-danger">*</span></label>
                    <select asp-for="Type" class="form-select" id="pollType">
                        <option value="@PollType.MultipleChoice">Multiple Choice</option>
                        <option value="@PollType.RankedChoice">Rangfolge</option>
                        <option value="@PollType.ScoreVoting">Bewertung</option>
                        <option value="@PollType.AvailabilityGrid">Verfügbarkeit</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Target" class="form-label">Ziel <span class="text-danger">*</span></label>
                    <select asp-for="Target" class="form-select">
                        <option value="@PollTarget.Location">Ort</option>
                        <option value="@PollTarget.Time">Zeit</option>
                        <option value="@PollTarget.Other">Sonstiges</option>
                    </select>
                    <span asp-validation-for="Target" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="EventId" class="form-label">Veranstaltung</label>
                    <select asp-for="EventId" class="form-select">
                        <option value="">Keine Veranstaltung</option>
                        @foreach (var evt in ViewBag.Events)
                        {
                            @if (Model.EventId == evt.Id)
                            {
                                <option value="@evt.Id" selected>@evt.Title</option>
                            }
                            else
                            {
                                <option value="@evt.Id">@evt.Title</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Type-Specific Configuration -->
    <div class="card mb-4" id="typeConfig">
        <div class="card-header">
            <h5 class="mb-0">Typ-spezifische Einstellungen</h5>
        </div>
        <div class="card-body">
            <!-- Multiple Choice Config -->
            <div id="multipleChoiceConfig" class="type-config">
                <div class="form-check">
                    <input asp-for="IsMultiSelect" class="form-check-input" type="checkbox" />
                    <label asp-for="IsMultiSelect" class="form-check-label">
                        Mehrfachauswahl erlauben
                    </label>
                </div>
            </div>

            <!-- Score Voting Config -->
            <div id="scoreVotingConfig" class="type-config d-none">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ScoreMin" class="form-label">Minimale Punktzahl</label>
                        <input asp-for="ScoreMin" type="number" class="form-control" min="0" max="10" />
                        <span asp-validation-for="ScoreMin" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ScoreMax" class="form-label">Maximale Punktzahl</label>
                        <input asp-for="ScoreMax" type="number" class="form-control" min="1" max="10" />
                        <span asp-validation-for="ScoreMax" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Options -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Optionen <span class="text-danger">*</span></h5>
            <button type="button" class="btn btn-sm btn-outline-primary" id="addOption">
                <i class="bi bi-plus-circle me-1"></i>Option hinzufügen
            </button>
        </div>
        <div class="card-body">
            <div id="optionsContainer">
                @for (int i = 0; i < Model.Options.Count; i++)
                {
                    <div class="option-item mb-3" data-index="@i">
                        <div class="row">
                            <div class="col-md-5">
                                <input asp-for="Options[i].Label" class="form-control" placeholder="Option @(i + 1)" />
                                <span asp-validation-for="Options[i].Label" class="text-danger"></span>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="Options[i].AdditionalInfo" class="form-control" placeholder="Zusatzinfo (optional)" />
                            </div>
                            <div class="col-md-2">
                                @if (i < 2)
                                {
                                    <button type="button" class="btn btn-outline-danger remove-option" disabled>
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-outline-danger remove-option">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </div>
                            <input asp-for="Options[i].DisplayOrder" type="hidden" value="@i" />
                        </div>
                    </div>
                }
            </div>
            <small class="text-muted">Mindestens 2 Optionen erforderlich, maximal 50 erlaubt</small>
        </div>
    </div>

    <!-- Privacy & Settings -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Datenschutz & Einstellungen</h5>
        </div>
        <div class="card-body">
            <div class="form-check mb-3">
                <input asp-for="IsAnonymous" class="form-check-input" type="checkbox" />
                <label asp-for="IsAnonymous" class="form-check-label">
                    Anonyme Abstimmung (Namen der Abstimmenden werden nicht angezeigt)
                </label>
            </div>

            <div class="mb-3">
                <label asp-for="ResultsVisibility" class="form-label">Ergebnis-Sichtbarkeit</label>
                <select asp-for="ResultsVisibility" class="form-select">
                    <option value="@ResultsVisibility.RealTime">Echtzeit (sofort sichtbar)</option>
                    <option value="@ResultsVisibility.AfterVoting">Nach der Abstimmung (wenn geschlossen)</option>
                    <option value="@ResultsVisibility.CreatorOnly">Nur für Ersteller</option>
                </select>
            </div>

            <div class="form-check mb-3">
                <input asp-for="AllowVoteChange" class="form-check-input" type="checkbox" />
                <label asp-for="AllowVoteChange" class="form-check-label">
                    Änderung der Stimme erlauben
                </label>
            </div>
        </div>
    </div>

    <!-- Scheduling -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Zeitplanung</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label">Startdatum</label>
                    <input asp-for="StartDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label">Enddatum</label>
                    <input asp-for="EndDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <small class="text-muted">Optional: Umfrage wird automatisch zum Enddatum geschlossen</small>
        </div>
    </div>

    <!-- Submit Buttons -->
    <div class="d-flex gap-2 mb-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle me-1"></i>Umfrage erstellen
        </button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Poll type configuration toggle
        document.getElementById('pollType').addEventListener('change', function () {
            const type = this.value;
            document.querySelectorAll('.type-config').forEach(el => el.classList.add('d-none'));

            if (type === '@PollType.MultipleChoice.ToString()') {
                document.getElementById('multipleChoiceConfig').classList.remove('d-none');
            } else if (type === '@PollType.ScoreVoting.ToString()') {
                document.getElementById('scoreVotingConfig').classList.remove('d-none');
            }
        });

        // Add option functionality
        let optionIndex = @Model.Options.Count;
        document.getElementById('addOption').addEventListener('click', function () {
            if (optionIndex >= 50) {
                alert('Maximal 50 Optionen erlaubt');
                return;
            }

            const container = document.getElementById('optionsContainer');
            const newOption = document.createElement('div');
            newOption.className = 'option-item mb-3';
            newOption.setAttribute('data-index', optionIndex);
            newOption.innerHTML = `
                <div class="row">
                    <div class="col-md-5">
                        <input name="Options[${optionIndex}].Label" class="form-control" placeholder="Option ${optionIndex + 1}" required />
                    </div>
                    <div class="col-md-5">
                        <input name="Options[${optionIndex}].AdditionalInfo" class="form-control" placeholder="Zusatzinfo (optional)" />
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-outline-danger remove-option">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                    <input name="Options[${optionIndex}].DisplayOrder" type="hidden" value="${optionIndex}" />
                </div>
            `;
            container.appendChild(newOption);
            optionIndex++;
        });

        // Remove option functionality
        document.addEventListener('click', function (e) {
            if (e.target.closest('.remove-option')) {
                const optionCount = document.querySelectorAll('.option-item').length;
                if (optionCount <= 2) {
                    alert('Mindestens 2 Optionen erforderlich');
                    return;
                }
                e.target.closest('.option-item').remove();
            }
        });
    </script>
}
