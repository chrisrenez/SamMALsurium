@model CreateMemberViewModel
@{
    ViewData["Title"] = "Mitglied hinzufügen";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Mitglied hinzufügen</h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Zurück zur Liste
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Das Mitglied wird sofort genehmigt und erhält eine E-Mail mit einem Link zum Setzen des Passworts.
                    </div>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Die E-Mail-Adresse wird als Benutzername verwendet.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="Member">Mitglied</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Admins haben vollständigen Zugriff auf alle Bereiche.
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Mitglied erstellen
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                Abbrechen
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
