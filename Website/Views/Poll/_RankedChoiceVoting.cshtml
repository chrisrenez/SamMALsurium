@model PollDetailsViewModel

@{
    var actionName = Model.HasUserVoted ? "ChangeVote" : "Vote";
    var buttonText = Model.HasUserVoted ? "Stimme aktualisieren" : "Abstimmen";
}

<form asp-action="@actionName" asp-route-id="@Model.Id" method="post" class="ranked-choice-form" id="poll-form-@Model.Id">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <p class="text-muted small mb-3">
            <i class="bi bi-info-circle"></i> Ordnen Sie die Optionen nach Ihrer Präferenz (1 = am meisten bevorzugt). Sie können Optionen unbewertet lassen.
        </p>

        <div id="ranked-options-container" class="ranked-options-container" role="list" aria-label="Optionen zum Rangieren">
            @foreach (var option in Model.Options)
            {
                var currentRank = 0;
                if (Model.UserVote != null && Model.UserVote is IDictionary<string, object> voteDict)
                {
                    if (voteDict.ContainsKey("Rankings"))
                    {
                        var rankings = voteDict["Rankings"] as IEnumerable<object>;
                        if (rankings != null)
                        {
                            foreach (var rankObj in rankings)
                            {
                                var rankDict = rankObj as IDictionary<string, object>;
                                if (rankDict != null && rankDict.ContainsKey("OptionId") && rankDict.ContainsKey("Rank"))
                                {
                                    if (rankDict["OptionId"].ToString() == option.Id.ToString())
                                    {
                                        currentRank = Convert.ToInt32(rankDict["Rank"]);
                                        break;
                                    }
                                }
                            }
                        }
                    }
                }

                <div class="card mb-2 ranked-option" data-option-id="@option.Id" draggable="true" role="listitem" aria-label="Option: @option.Label">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="drag-handle" style="cursor: move;" role="button" aria-label="Ziehen zum Neuordnen der Option @option.Label" tabindex="0">
                                <i class="bi bi-grip-vertical" aria-hidden="true"></i>
                            </div>
                            <div class="flex-shrink-0" style="width: 80px;">
                                <label for="rank-select-@option.Id" class="visually-hidden">Rang für @option.Label</label>
                                <select id="rank-select-@option.Id" name="rank_@option.Id" class="form-select form-select-sm rank-select" data-option-id="@option.Id" aria-label="Rang für @option.Label">
                                    @if (currentRank == 0)
                                    {
                                        <option value="0" selected>-</option>
                                    }
                                    else
                                    {
                                        <option value="0">-</option>
                                    }
                                    @for (var i = 1; i <= Model.Options.Count; i++)
                                    {
                                        if (currentRank == i)
                                        {
                                            <option value="@i" selected>@i</option>
                                        }
                                        else
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-bold">@option.Label</div>
                                @if (!string.IsNullOrEmpty(option.AdditionalInfo))
                                {
                                    <div class="text-muted small">@option.AdditionalInfo</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-muted small mt-2">
            <i class="bi bi-hand-index"></i> Ziehen Sie die Karten, um die Reihenfolge zu ändern, oder verwenden Sie die Dropdown-Menüs.
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> @buttonText
        </button>
        @if (Model.EventId.HasValue)
        {
            <a href="@Url.Action("Details", "Event", new { id = Model.EventId })" class="btn btn-outline-secondary">
                Abbrechen
            </a>
        }
    </div>
</form>
