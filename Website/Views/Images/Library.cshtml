@model ImageLibraryViewModel
@{
    ViewData["Title"] = "Image Library";
}

<div class="container-xxl py-3">
    <div class="content-card card-base card-padding mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">My Image Library</h2>
            <a asp-action="Upload" asp-route-returnUrl="@Model.ReturnUrl" asp-route-contextId="@Model.ContextId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Upload New Image
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ReturnUrl))
    {
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle"></i> Select an image to use, or upload a new one.
        </div>
    }

    @if (Model.Images.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-images text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">No images yet</h4>
            <p class="text-muted">Upload your first image to get started!</p>
            <a asp-action="Upload" asp-route-returnUrl="@Model.ReturnUrl" asp-route-contextId="@Model.ContextId" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> Upload Image
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var image in Model.Images)
            {
                <div class="col">
                    <partial name="_ImageCard" model="image" view-data="@(new ViewDataDictionary(ViewData) { { "ReturnUrl", Model.ReturnUrl }, { "ContextId", Model.ContextId } })" />
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script type="module" src="~/js/Images/ImageLibrary.js" asp-append-version="true"></script>
    <script type="module">
        import { initializeLibrary } from '/js/Images/ImageLibrary.js';
        document.addEventListener('DOMContentLoaded', function() {
            initializeLibrary();
        });
    </script>
}
