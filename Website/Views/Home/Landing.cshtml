                interval: 10000,        // 10 seconds auto-advance
                transitionSpeed: 500,   // 500ms slide transition
                pauseOnHover: false     // Don't pause on hover by default
            });

            carousel.init();
            console.log('Hero carousel initialized');
        });
    </script>
